{
  "Database": {
    "Provider": "sqlserver"
  },
  "ConnectionStrings": {
    "Sqlite": "Data Source=weatherassessment.db",
    "SqlServer": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=WeatherAssessmentDb;MultipleActiveResultSets=true;TrustServerCertificate=true;"
  },
  "OpenWeatherMap": {
    "ApiKey": "",
    "BaseUrl": "https://api.openweathermap.org",
    "CacheDurationMinutes": 5
  },
  "BackgroundSync": {
    "Enabled": true,
    "FallbackRefreshIntervalMinutes": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
